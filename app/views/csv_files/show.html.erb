<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @csv_file %>

    <%= link_to 'Edit this csv_file', edit_csv_file_path(@csv_file), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this csv_file', csv_file_path(@csv_file), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to csv_files', csv_files_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Get modified csv", modified_csv_csv_file_path(@csv_file), class: "mt-2 rounded-lg py-3 px-5 bg-green-500 inline-block font-semibold" %>
  </div>
</div>
